{
  "compilerOptions": {
    /* === Sistema de Módulos e Plataforma === */
    "target": "ES2020",
    "module": "CommonJS",               // Usa ESM (import/export)
    "moduleResolution": "node",            // Resolve módulos como o Node
    "lib": ["ES2020", "DOM"],              // Inclui libs do DOM (por causa do TSX React)
    "types": ["node"],                     // Adiciona tipos do Node.js

    /* === Caminhos e Saída === */
    "rootDir": "./",                       // Raiz do projeto
    "outDir": "./dist",                    // Pasta de saída da build
    "esModuleInterop": true,               // Permite importações padrão (ex: import express from 'express')
    "resolveJsonModule": true,             // Permite importar JSONs
    "skipLibCheck": true,                  // Ignora checagem de tipos de libs para compilar mais rápido

    /* === Verificações e Segurança === */
    "strict": true,                        // Ativa modo estrito do TypeScript
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "Receipt.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
